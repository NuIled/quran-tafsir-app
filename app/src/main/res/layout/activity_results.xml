<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layoutDirection="rtl">
    <TextView
    android:id="@+id/headerTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="نتائج الاختبار"
    android:textSize="24sp"
    android:textColor="#FDFDFD"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="16dp"
    android:textAlignment="center"/>

        <!-- Result Section -->
    <LinearLayout
    android:id="@+id/resultSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/headerTextView"
    android:layout_marginBottom="16dp">

    <!-- Example Result Item -->
    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نتيجتك:"
        android:textSize="18sp"
        android:textColor="#FAFAFA"/>

    <TextView
        android:id="@+id/resultValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85/100"
        android:textSize="20sp"
        android:textColor="#FCFEFF"/>

    <!-- Additional Results or Information -->
    <TextView
        android:id="@+id/additionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مبروك! لقد حققت نتيجة عالية."
        android:textSize="16sp"
        android:textColor="#F6F6F6"/>
    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حاول مرة أخرى"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/returnHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="العودة إلى الصفحة الرئيسية"/>
    </LinearLayout>

</RelativeLayout>
